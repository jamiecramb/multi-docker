{
    "AWSEBDockerrunVersion" : 2,
    "ContainerDefinitions" : [
        {
            "name" : "client",
            "image" : "jamiecramb/multi-client",
            "hostname" : "client",
            "essential": false,
            "memory": 128
        },
        {
            "name" : "server",
            "image" : "jamiecramb/multi-server",
            "hostname" : "api",
            "essential": false,
            "memory": 128
        },
        {
            "name" : "worker",
            "image" : "jamiecramb/multi-worker",
            "essential": false,
            "memory": 128
        },
        {
            "name" : "nginx",
            "image" : "jamiecramb/multi-nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["client", "server"],
            "memory": 128
        }
    ]
}